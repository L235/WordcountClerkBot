{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "NEVER",
    "cronSchedule": "*/5 * * * *"
  },
  "volumes": [
    {
      "name": "bot-data",
      "mountPath": "/data"
    }
  ]
} 